{
  "name": "reservation-api",
  "version": "1.0.0",
  "description": "**reservation-api** initial",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write '**/*.java'",
    "test": "./mvnw test",
    "integration-test": "./mvnw integration-test",
    "pitest": "currentBranch=$(git rev-parse --abbrev-ref HEAD) && echo \"Will compare the branch ${currentBranch} with origin/master\" && ./mvnw test-compile org.pitest:pitest-maven:scmMutationCoverage -Dinclude=ADDED,MODIFIED -DtimestampedReports=false && echo \"Opening the pit-report, path: target/pit-reports/index.html\"",
    "pitest-all": "./mvnw -DwithHistory test-compile org.pitest:pitest-maven:mutationCoverage -Dinclude=ADDED,MODIFIED",
    "precommit": "prettier --write '**/*.java' && ./mvnw test  && git add . ",
    "postgres": "docker compose up"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.trendyol.com/local-commerce/ads/reservation-api"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.1",
    "prettier-plugin-java": "^1.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{,java}": [
      "prettier --write",
      "git add"
    ]
  }
}
